<Window x:Class="FlightSimulatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        xmlns:ViewModels="clr-namespace:FlightSimulatorApp.ViewModels"
        xmlns:Views="clr-namespace:FlightSimulatorApp.Views"
        mc:Ignorable="d"
        Title="FlightSimulator" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <StackPanel.DataContext>
                <ViewModels:ExampleViewModel/>
            </StackPanel.DataContext>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
            <TextBlock Margin="5" Text="{Binding Name}"></TextBlock>
            <Views:Joystick X="125" Y="125"></Views:Joystick>
            <Views:MapComponent 
        </StackPanel>
    </Grid>
</Window>
